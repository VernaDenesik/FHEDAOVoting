# ========================================
# Network Configuration
# ========================================

# Sepolia Testnet RPC URL (Get from Infura, Alchemy, or other providers)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Mainnet RPC URL (for forking or mainnet deployment)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# ========================================
# Account Configuration
# ========================================

# Deployer Private Key (WITHOUT 0x prefix)
# WARNING: Never commit this file with real private keys!
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Alternative: Mnemonic phrase (12 or 24 words)
# MNEMONIC=your twelve word mnemonic phrase here for testing purposes only

# ========================================
# API Keys
# ========================================

# Etherscan API Key (for contract verification)
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# CoinMarketCap API Key (for gas price in USD)
# Get from: https://pro.coinmarketcap.com/account
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# ========================================
# Contract Configuration
# ========================================

# Minimum voting power required to create proposals
MIN_VOTING_POWER=100

# Voting duration in seconds (default: 7 days)
VOTING_DURATION=604800

# Reveal period in seconds (default: 1 day)
REVEAL_PERIOD=86400

# ========================================
# Security Configuration
# ========================================

# Pauser role addresses (comma-separated)
# These addresses can pause the voting system in emergencies
PAUSER_ADDRESSES=0x0000000000000000000000000000000000000000

# Emergency pause status (true/false)
EMERGENCY_PAUSE_ENABLED=false

# Rate limiting - max proposals per address per day
MAX_PROPOSALS_PER_DAY=5

# DoS Protection - max voters per proposal
MAX_VOTERS_PER_PROPOSAL=1000

# ========================================
# Gas Optimization
# ========================================

# Gas price in gwei (auto = automatic detection)
GAS_PRICE=auto

# Gas limit for deployment
GAS_LIMIT=8000000

# Gas report enabled (true/false)
REPORT_GAS=false

# ========================================
# Compiler Configuration
# ========================================

# Solidity optimizer runs (higher = more optimized for runtime, lower = deployment)
OPTIMIZER_RUNS=200

# Enable Yul optimizer (true/false)
YUL_OPTIMIZER_ENABLED=true

# ========================================
# Testing Configuration
# ========================================

# Test timeout in milliseconds
TEST_TIMEOUT=40000

# Coverage threshold percentage
COVERAGE_THRESHOLD=95

# Skip tests on Sepolia (true/false)
SKIP_SEPOLIA_TESTS=false

# ========================================
# Monitoring & Analytics
# ========================================

# Enable contract size reporting (true/false)
CONTRACT_SIZE_REPORTING=true

# Enable gas profiling (true/false)
GAS_PROFILING=false

# ========================================
# Deployment Configuration
# ========================================

# Initial voter weights for deployment (JSON format)
# Example: {"0xAddress1":1000,"0xAddress2":500}
INITIAL_VOTER_WEIGHTS={}

# Auto-verify after deployment (true/false)
AUTO_VERIFY=true

# Save deployment info to file (true/false)
SAVE_DEPLOYMENT_INFO=true

# ========================================
# Development Configuration
# ========================================

# Enable debug mode (true/false)
DEBUG=false

# Verbose logging (true/false)
VERBOSE=false

# Network to use for local development
LOCAL_NETWORK=localhost

# ========================================
# CI/CD Configuration
# ========================================

# Codecov token for coverage uploads
CODECOV_TOKEN=your_codecov_token_here

# Run security checks in CI (true/false)
CI_SECURITY_CHECKS=true

# Run performance tests in CI (true/false)
CI_PERFORMANCE_TESTS=true

# ========================================
# Notes
# ========================================

# 1. Copy this file to .env and fill in your values
# 2. Never commit .env file to version control
# 3. Keep private keys secure and never share them
# 4. Use separate keys for development and production
# 5. Regularly rotate API keys and private keys
# 6. Review security settings before mainnet deployment
