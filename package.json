{
  "name": "governance-voting-system",
  "version": "1.0.0",
  "description": "Secure governance voting system with commit-reveal scheme",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network localhost",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "lint": "npm run lint:sol && npm run lint:js && npm run prettier:check",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint '**/*.js' --ignore-path .eslintignore",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix && npm run format",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js:fix": "eslint '**/*.js' --ignore-path .eslintignore --fix",
    "prettier:check": "prettier --check '**/*.{js,json,md,sol,yml}'",
    "prettier:write": "prettier --write '**/*.{js,json,md,sol,yml}'",
    "format": "npm run prettier:write",
    "security": "node scripts/security-audit.js",
    "security:audit": "npm audit --audit-level=moderate",
    "performance": "node scripts/performance-check.js",
    "size": "hardhat size-contracts",
    "gas-report": "REPORT_GAS=true npm test",
    "prepare": "husky install",
    "pre-commit": "npm run lint && npm test",
    "validate": "npm run lint && npm test && npm run security"
  },
  "keywords": [
    "ethereum",
    "governance",
    "voting",
    "hardhat",
    "solidity",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "^4.3.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solhint": "^4.1.0",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0"
  }
}
